<odoo>
    <record id="maintenance_task_tree_view" model="ir.ui.view">
        <field name="name">maintenance.task.tree</field>
        <field name="model">maintenance.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="machine_id"/>
                <field name="scheduled_date"/>
                <field name="assigned_to"/>
                <field name="state"/>
                <field name="priority"/>
            </list>
        </field>
    </record>

    <record id="maintenance_task_form_view" model="ir.ui.view">
        <field name="name">maintenance.task.form</field>
        <field name="model">maintenance.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="machine_id"/>
                            <field name="scheduled_date"/>
                            <field name="assigned_to"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="priority"/>
                            <field name="maintenance_type"/>
                            <field name="completion_date"/>
                            <field name="description"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="maintenance_task_kanban_view" model="ir.ui.view">
        <field name="name">maintenance.task.kanban</field>
        <field name="model">maintenance.task</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-att-class="'o_kanban_record maintenance_kanban priority_' + (record.priority.raw_value or 'none')">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                <field name="machine_id"/>
                            </div>
                            <div>
                                <field name="scheduled_date"/>
                            </div>
                            <div>
                                <field name="assigned_to"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="maintenance_task_graph_view" model="ir.ui.view">
        <field name="name">maintenance.task.graph</field>
        <field name="model">maintenance.task</field>
        <field name="arch" type="xml">
            <graph string="Maintenance Tasks by Type and Priority">
                <field name="maintenance_type" type="row"/>
                <field name="priority" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="maintenance_task_pivot_view" model="ir.ui.view">
        <field name="name">maintenance.task.pivot</field>
        <field name="model">maintenance.task</field>
        <field name="arch" type="xml">
            <pivot string="Maintenance Pivot">
                <field name="maintenance_type"/>
                <field name="priority"/>
                <field name="state"/>
            </pivot>
        </field>
    </record>

    <record id="maintenance_task_search_view" model="ir.ui.view">
        <field name="name">maintenance.task.search</field>
        <field name="model">maintenance.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

                <filter string="Draft" name="filter_draft" domain="[('state','=','draft')]"/>
                <filter string="In Progress" name="filter_in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Done" name="filter_done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="filter_cancelled" domain="[('state','=','cancelled')]"/>

                <separator/>

                <filter string="Preventive" name="filter_preventive" domain="[('maintenance_type','=','preventive')]"/>
                <filter string="Corrective" name="filter_corrective" domain="[('maintenance_type','=','corrective')]"/>

                <separator/>

                <filter string="High Priority" name="filter_high" domain="[('priority','=','high')]"/>
                <filter string="Medium Priority" name="filter_medium" domain="[('priority','=','medium')]"/>
                <filter string="Low Priority" name="filter_low" domain="[('priority','=','low')]"/>

            </search>
        </field>
    </record>

    <record id="maintenance_task_action" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">maintenance.task</field>
        <field name="view_mode">list,form,kanban,graph,pivot</field>
    </record>
</odoo>